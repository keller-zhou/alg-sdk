<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="75dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/color_white">

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical">

        <View
            android:id="@+id/icon_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/hint_over"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="70dp"
        android:src="@drawable/ic_task_fastend"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_color7"
            android:textSize="15dp"
            tools:text=""/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/text_color6"
            android:textSize="11sp"
            tools:text=""/>
        <TextView
            android:id="@+id/market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_color7"
            tools:text="" />
    </LinearLayout>
    

    <LinearLayout
        android:layout_gravity="right|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_color7"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:layout_gravity="right"
            tools:text=""/>

        <TextView
            android:id="@+id/distance"
            android:textSize="14sp"
            android:textColor="@color/text_color6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="right"
            android:layout_gravity="right"
            tools:text=""/>
        </LinearLayout>

    <ImageView
        android:id="@+id/error_task_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/ic_audit_notpass"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_task_stick"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:textSize="10sp"
        android:layout_gravity="right|top"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/ic_task_stick"
        />

</FrameLayout>