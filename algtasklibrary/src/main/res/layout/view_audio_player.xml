<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_audio_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_audio_play"
            android:layout_gravity="center_vertical"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">
            <SeekBar
                android:id="@+id/audio_play_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_horizontal_thin_gray_bg"
                android:thumb="@drawable/ic_seekbar_thumb"/>
            <TextView
                android:id="@+id/player_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#A6A6A6"
                android:textSize="12sp"
                android:layout_gravity="bottom|left"/>
            <TextView
                android:id="@+id/player_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#A6A6A6"
                android:textSize="12sp"
                android:layout_gravity="bottom|right"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
